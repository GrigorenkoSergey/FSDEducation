include ../shades/shades.pug
include ../types/types.pug

mixin colors-and-type(options = {})
  - 
    const {
      colors = [
        {
          title: "Dark Shade 100%",
          class: "shades_color_dark_100",
          hexCode: "#1F2041"
        },
        {
          title: "Dark Shade 75%",
          class: "shades_color_dark_75",
          hexCode: "#1F2041"
        },
        {
          title: "Dark Shade 50%",
          class: "shades_color_dark_50",
          hexCode: "#1F2041"
        },
        {
          title: "Dark Shade 25%",
          class: "shades_color_dark_25",
          hexCode: "#1F2041"
        },
        {
          title: "Dark Shade 5%",
          class: "shades_color_dark_5",
          hexCode: "#1F2041"
        },
        {
          title: "Purple",
          class: "shades_color_purple",
          hexCode: "#BC9CFF"
        },
        {
          title: "Green",
          class: "shades_color_green",
          hexCode: "#6FCF97"
        },
      ],
      typesList = [
        {
          tag: "h1",
          text: "This one is the sub-section or widget title",
        },
        {
          tag: "h2",
          text: "Next one is the item title inside widgets",
        },
        {
          tag: "h3",
          text: "This is a label or cta text",
        },
        {
          tag: "Body",
          text: "This is the body text which is used for most of the design, like paragraphs, lists, etc.",
        },
      ],
    } = options;

  main
    .colors-and-type__shades
      +shades(colors)
    .colors-and-type__types
      +types(typesList)