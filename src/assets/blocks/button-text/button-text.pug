mixin button-text(options = {})
  -
    const {
      text = "click me",
      attr = {},
      mod = {},
    } = options;

    const validModifiers = ["button-text_theme_hovered"];

    const modifiers = Object.entries(mod)
      .map(([key, entry]) => `button-text_${key}_${entry}`)
      .filter(modifier => validModifiers.includes(modifier));

  button.button-text(type="submit" class= modifier)&attributes(attr) #{text}