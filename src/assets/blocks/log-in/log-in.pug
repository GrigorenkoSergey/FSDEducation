include ../input/input.pug
include ../button/button.pug
include ../button-payment/button-payment.pug

mixin log-in(options = {})
  -
    const defaultOptions = require('Blocks/log-in/default-options.json');
    const {
      title,
      inputEmail,
      inputPassword,
      buttonPayment,
      mainQuestion,
      buttonCreateAccount
        } = { ...defaultOptions, ...options};

  form.log-in
    h1 #{title}
    .log-in__email
      +input(inputEmail)
    .log-in__password
      +input(inputPassword)
    .log-in__button-payment
      +button-payment(buttonPayment)
    .log-in__account-create
      span #{mainQuestion}
      +button(buttonCreateAccount)
