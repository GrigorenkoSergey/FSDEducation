include ../input/input.pug
include ../list/list.pug

mixin footer(options = {})
  - 
    const {
      img = {
        height: "40px",
        alt: "Логотип",
        src: "assets/blocks/footer/images/logo-toxin.png",
      },
      description = `Бронирование номеров в лучшем отеле
        2019 года по версии ассоциации
        «Отельные взгляды»`,
      navigation = {
        title: "Навигация",
        list: [ "О нас", "Новости", "Служба поддержки", "Услуги" ],
      },
      aboutUs = {
        title: "О нас",
        list: ["О сервисе", "Наша команда", "Вакансии", "Инвесторы"],
      },
      support = {
        title: "Служба поддержки", 
        list: ["Соглашения", "Сообщества", "Связь с нами"]
      },
      subscribe = {
        title: "Подписка",
        text: `Получайте специальные предложения
          и новости сервиса`,
        inputOptions: {
          attr: {
            type: "Email",
            placeholder: "Email",
          },
          mod: {
            theme: "email",
          },
        },
      },
    } = options;

  .footer
    .footer__logo
      img.footer__logo-img(alt = img.alt src= img.src height= img.height)
      .footer__logo-description #{description}
    .footer__navigation
      +list(navigation)
    .footer__about-us
      +list(aboutUs)
    .footer__support
      +list(support)

    .footer__subscribe
      - const {title, text, inputOptions} = subscribe;
      .footer__subscribe-title #{title}
      .footer__subscribe-description #{text}
      .footer__subscribe-email
        +input(inputOptions)
