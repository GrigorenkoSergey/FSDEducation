mixin form-elements(options = {})
  -
    const reviewerMurad = {
      avatarSrc: "assets/blocks/comment/images/comment-murad.png",
      name: "Мурад Сарафанов",
      term: "5 дней назад", 
      likeButton: {
        counter: 12,
        isPushed: true,
      },
      content: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шупомодавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
    };

  .first-column
    .example-input
      .example-input__title
        h3 text field
        span default
      +input({attr: {placeholder: "Email"}})

    .example-input 
      .example-input__title
        h3 text field
        span hover / focus
      +input({attr: {value: "This is pretty awesome"}, mod: {action: "hover"}})

    .example-dropdown-default  
      span.example__modifier default
      +dropdown({input: "Сколько гостей"})

    .example-masket-text-field
      .example-input__title
        h3 masked text field
        span default
      +input({attr: {type: "date"}, mod: {type: "date"}})

    .example-date-dropdown  
      +date-dropdown({arrivalTitle: "date dropdown", departureTitle: "date dropdown"})

    .example-input_filter
      .example-input__title
        h3 filter date dropdown
      select.filter-date.select
        option(selected) 19 авг - 23 авг  

    .example-input_email
      .example-input__title
        h3 subscription text field
      +input({attr: {type: "email", placeholder: "Email"}, mod: {theme: "email"}})

    .example-input_dropdown
      span.example__modifier default
      +dropdown-rooms()

    .example-dropdown_expanded
      span.example__modifier expanded
      +dropdown-rooms({expanded: true})

    .example__expandable-checkbox-list
      +expandable-checkbox-list({items: [], expanded: false})

    .example__expandable-checkbox-list_expanded
      +expandable-checkbox-list({expanded: true})

    .example-buns
      +buns()

  .second-column
    .example-checkbox-buttons
      +checkbox-buttons()

    .example-radio-buttons
      .example-radio-buttons__title
        h3 radio buttons
      +radio-buttons-group()

    .example-toggle
      .example-toggle__title
        h3 toggle
      +toggler("get_special_offers", "Получать спецпредложения", true) 
      +toggler("get_special_offers_1", "Получать спецпредложения") 

    .example-like-buttons
      .example-like-buttons__title
        h3 like button
      .example-like-buttons__container
        +like-button({counter: 2})
        +like-button({counter: 12, isPushed: true})

    .example-rate-buttons
      .example-rate-buttons__title
        h3 rate button
      .example-rate-buttons__container
        +rate-button(4)
        +rate-button(5)

    .example-dropdown-guests
      +dropdown-guests({title: "dropdown", expanded: true})

    .example-rich-checkbox-buttons
      .rich-checkbox__title   rich checkbox buttons
      +rich-checkbox("wide_hall", "Широкий коридор", "Ширина коридоров в номере<br />не менее 91 см")
      +rich-checkbox("disabled_helper", "Помощник для инвалидов", "На 1 этаже вас встретит специалист<br/>и проводит до номера")

    .example-comments
      +comment(reviewerMurad)

  .third-column
    +range-slider

    .example-button
      .example-button__title
        h3 buttons
      .example-button__container
        +button()
        +button({mod: {theme: "disabled"} })
        +button({mod: {color: "white"} })
        +button({mod: {color: "white", theme: "disabled"}, attr: {disabled: true} })
        +button-text()
        .example-button__button_moved
          +button-text({mod: {theme: "disabled"}})

      .example-button-payment
        +button-payment({text: "перейти к оплате"})

    .example-pagination
      .example-pagination__title
        h3 pagination
      +pagination

    .example-dropdown-guests_new-entry
      - const counters = [2, 1, 0];
      +dropdown-guests({title: "dropdown", expanded: true, counters})

    .example-bullet-list
      .example-bullet-list__title
        h3 bullet list
      +bullet-list()