extends ../../../assets/blocks/template/template_website.pug

block includes
  include ../../../assets/blocks/buns/buns.pug
  include ../../../assets/blocks/comment/comment.pug
  include ../../../assets/blocks/final-bill/final-bill.pug
  include ../../../assets/blocks/bullet-list/bullet-list.pug
  include ../../../assets/blocks/diagram/diagram.pug

block variables
  - 
    var titleName = "Room details";
    var bunsArr = [
      {name: "smile", title: "Комфорт", description: "Шумопоглощающие стены"},
      {name: "city", title: "Удобство", description: "Окно в каждой из спален"},
      {name: "fire", title: "Уют", description: "Номер оснащен камином"},
    ];

    var reviewerMurad = Object.assign({}, reviewer);
    var reviewerPatricia = {
      avatarSrc: "assets/blocks/comment/images/comment-patricia.png",
      name: "Патрисия Стеклышкова",
      term: "неделю назад", 
      likeButton: {
        counter: 2,
        isPushed: false,
      },
      content: `Обслуживание на высоте! Все аккуратно, чисто. Завтраки в номер 
        советую заказать, каждый день новое блюдо и десерт как комплимент`,
    }
block content
  .photos
    .photos__img_main-container
      img.photos__img(src="./assets/images/Website_pages/room_details/image-1.png")
    .photos__img_alternative-container
      img.photos__img(src="./assets/images/Website_pages/room_details/image-2.png")
      img.photos__img(src="./assets/images/Website_pages/room_details/image-3.png")
  main
    .column_1
      .room-details__wrapper
        .room-details__buns
          .room-details__title
            h2 Сведения о номере
          +buns(bunsArr)
        .room-details__impressions
          .room-details__title
            h2 Впечатления от номера
          .room-details__diagram
            +diagram()

      .room-details__comments
        .room-details__comments-title
          h2 Отзывы посетителей номера
          span 2 отзыва
        .room-details__comments-comment
          +comment(reviewerMurad)
          +comment(reviewerPatricia)
      .rules_and_cancel
        .room-details__rules
          .room-details__rules-title
            h2 Правила
          +bullet-list()
        .room-details__cancel
          .room-details__cancel-title
            h2 Отмена
          p Бесплатная отмена в течение 48 ч. После этого 
            | при отмене не позднее чем за 5 дн. до прибытия
            | вы получите полный возврат за вычетом сбора за услуги.

    .column_2
      +final-bill()
