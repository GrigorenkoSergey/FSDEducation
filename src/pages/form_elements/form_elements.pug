mixin radioButton(id, name, value, checked)
    if (checked === "checked")
        input.radio-buttons__input(type="radio" id= id name= name checked)
    else
        input.radio-buttons__input(type="radio" id= id name= name)   

    label.radio-buttons__label(for= id) !{value}


mixin rich-checkbox(id, value, discription, classList, checked)
    +checkbox(id, value, "rich-checkbox", checked)
    span.rich-checkbox__span !{discription}

mixin rateButton(starsNumDeafault)
    - var n = 0;
    .rate-button(data-stars_num= starsNumDeafault)
        while (++n < 6)
            if (n <= starsNumDeafault)
                .rate-button__star_checked(data-star= n)
            else
                .rate-button__star(data-star= n)

