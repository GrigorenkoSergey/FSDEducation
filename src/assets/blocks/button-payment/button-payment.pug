mixin button-payment(options = {})
  -
    const {
      text = "Оплатить",
      mod = {},
      attr = {type: "submit"},
    } = options;

    const summaryClasses = Object.entries(mod).reduce((str, [key, entry]) => {
      return str += ` button-payment_${key}_${entry}`; 
    }, "button-payment");

  button(class= summaryClasses)&attributes(attr)
    span.button-payment__span #{text}