mixin diagram(options = {})
  -
    const {
      width = "120px",
      height = "120px",
      voices = "голосов",
      magnificently = "Великолепно",
      good = "Хорошо",
      satisfactory = "Удовлетворительно",
      disapointed = "Разочарован",
    } = options;

  .diagram
    .diagram__figure
      canvas.diagram__canvas(width= width height= height).js-diagram__canvas
      span.diagram__total.js-diagram__total
      span.diagram__voices #{voices}
    ul.diagram__description
      li.diagram__estimate.diagram__estimate_value_magnificently #{magnificently}  
      li.diagram__estimate.diagram__estimate_value_good #{good} 
      li.diagram__estimate.diagram__estimate_value_satisfactory #{satisfactory} 
      li.diagram__estimate.diagram__estimate_value_disapointed #{disapointed} 
